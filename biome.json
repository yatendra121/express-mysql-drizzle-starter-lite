{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "recommended": false
      },
      "correctness": {
        "recommended": false,
        "noRenderReturnValue": "error",
        "noUnusedVariables": "error",
        "noUnusedLabels": "error",
        "noUnreachable": "error",
        "noChildrenProp": "error",
        "useIsNan": "error"
      },
      "complexity": {
        "recommended": false
      },
      "nursery": {
        "recommended": false
      },
      "security": {
        "recommended": false,
        "noDangerouslySetInnerHtml": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "suspicious": {
        "recommended": false,
        "noConsole": "error",
        "noDuplicateCase": "error",
        "noDuplicateClassMembers": "error",
        "noDuplicateJsxProps": "error",
        "noDuplicateObjectKeys": "error",
        "noDuplicateParameters": "error",
        "noRedeclare": "error",
        "noShadowRestrictedNames": "error",
        "noFallthroughSwitchClause": "error",
        "noFunctionAssign": "error",
        "noSelfCompare": "error",
        "noDoubleEquals": "error",
        "noDebugger": "error",
        "noArrayIndexKey": "error"
      },
      "style": {
        "recommended": false,
        "noUselessElse": "error"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "experimentalScannerIgnores": [".vscode", ".github", "package.json", "tests/"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 90,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  }
}
